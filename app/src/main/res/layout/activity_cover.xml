<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CoverActivity"
    android:background="@mipmap/login_bg1">

    <Button
        android:id="@+id/btn_tosignin"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_toenroll"
        android:layout_marginTop="200dp"
        android:text="@string/signin"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/seagreen" />


    <Button
        android:id="@+id/btn_toenroll"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_tosignin"
        android:layout_marginTop="200dp"
        android:text="@string/new_user"
        android:textSize="20sp"
        android:background="@color/lightslategrey"
        android:textColor="@color/white"
        android:gravity="center" />

</android.support.constraint.ConstraintLayout>

