<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/side_nav_bar"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:id="@+id/imv_navigation_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:contentDescription="avatar"
        android:paddingTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/ic_default_user_avatar" />

    <TextView
        android:id="@+id/txv_navigation_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="37dp"
        android:text="Tony Justin"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/imv_navigation_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_navigation_signature_editor"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="6dp"
        android:src="@mipmap/ic_edit"
        app:layout_constraintLeft_toRightOf="@id/imv_navigation_avatar"
        app:layout_constraintTop_toBottomOf="@id/txv_navigation_nickname" />

    <TextView
        android:id="@+id/txv_navigation_signature"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:gravity="left|top"
        android:text="you share rose and  get fun"
        android:textSize="12dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@id/imv_navigation_signature_editor"
        app:layout_constraintTop_toBottomOf="@id/txv_navigation_nickname" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="210dp" />

    <ImageView
        android:id="@+id/imv_navigation_qrcode"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="13dp"
        android:src="@mipmap/ic_qrcode" />


</android.support.constraint.ConstraintLayout>
