<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jishi.jishi.ui.activity.MainActivity">


    <FrameLayout
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/div_tab_bar" />


    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_above="@id/ly_tab_bar" />

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_tab_menu_index_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="首页"
            android:textColor="@drawable/main_tab_menu_text"
            android:textSize="16sp" />

        <!--TODO 等待修改图片-->
        <TextView
            android:id="@+id/menu_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_tab_menu_index_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="消息"
            android:textColor="@drawable/main_tab_menu_text"
            android:textSize="16sp" />

        <!--TODO 等待修改图片-->
        <TextView
            android:id="@+id/menu_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_tab_menu_index_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的"
            android:textColor="@drawable/main_tab_menu_text"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>